{% extends "layout.html.twig" %}


{% block content %}
<div ng-controller="searchCtrl">
    <nav class="navbar-default navbar navbar-fixed-top" role="navigation">

        <div class="container-fluid">
            <!--<a class="navbar-brand" href="{{ path('home') }}"></a>-->
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown" style="border-left: 1px solid #ccc; border-right: 1px solid #ccc;">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                        Country <i class="glyphicon glyphicon-map-marker" style="vertical-align: -1px; padding-left: 10px;"></i>
                        ([[country.name]])
                    </a>
                    <ul class="dropdown-menu" role="menu">
                        <li ng-repeat="mayCountry in countries"><a ng-click="changeCountry(mayCountry)">[[mayCountry.name]]</a></li>
                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right" style="border-left: 1px solid #ccc; padding: 15px 15px;">
                Currency ([[country.currency]])

            </ul>
        </div>
    </nav><!-- /navbar -->

    <header style="width: 100%; height: 500px; position: relative; overflow: hidden;">
        <img src="/assets/img/paris1.jpg" style="position:absolute; left:50%; top:50%; margin-left:-1000px; margin-top:-256px;max-width:none;"/>
        <div class="container" style="margin-top: 100px;">
            <div style="" class="center-block search-box">
                <form class="tile" style="text-align: left;">
                    <div class="col-sm-12">
                        <div>
                            <input type="text" placeholder="From" ng-model="cityFrom" uib-typeahead="airport as airport.city for airport in airports | filter:$viewValue | limitTo:8"  typeahead-min-length="2" class="form-control">
                        </div>
                    </div>
                    <div style="display: inline-block; width: 100%;">
                        <div style="margin-top:10px;">
                            <div class="col-sm-6">
                                <p class="input-group">
                                    <input type="text" class="form-control" placeholder="Departure" uib-datepicker-popup="[[format]]" ng-model="departure" is-open="IsDepartureOpen" min-date="minDate" max-date="maxDate" show-weeks="false" datepicker-options="dateOptions" show-button-bar="false" ng-required="true" close-text="Close" alt-input-formats="altInputFormats" />
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" ng-click="departureOpen()"><i class="glyphicon glyphicon-calendar"></i></button>
                                </span>
                                </p>
                            </div>
                        </div>
                        <div style="margin-top:10px; margin-bottom: 10px;">
                            <div class="col-sm-6 inner-addon right-addon">
                                <i class="glyphicon glyphicon-user"></i>
                                <select class="form-control people-search" ng-model="people" ng-options="opt for opt in passengers">
                                </select>
                            </div>
                        </div>
                    </div>
                    <div style="display: inline-block; width: 100%;">
                        <div>
                            <div class="col-sm-6">
                                <p class="input-group">
                                    <input type="text" class="form-control" placeholder="Return" uib-datepicker-popup="[[format]]" ng-model="return" is-open="IsReturnOpen" min-date="minDate" max-date="maxDate" show-weeks="false" datepicker-options="dateOptions" show-button-bar="false" ng-required="true" close-text="Close" alt-input-formats="altInputFormats" />
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" ng-click="returnOpen()"><i class="glyphicon glyphicon-calendar"></i></button>
                                </span>
                                </p>
                            </div>
                        </div>
                        <div>
                            <div class="col-sm-6">
                                <button type="submit" class="btn btn-success" style="width:100%;"><i class="glyphicon glyphicon-search"></i> &nbsp;Search </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </header>
</div>
{% endblock %}






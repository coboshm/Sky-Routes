{% extends "layout.html.twig" %}


{% block content %}
<div ng-controller="fliesResultsCtrl">
    <header style="width: 100%; height: 500px; position: relative; overflow: hidden;">
        <img src="/assets/images/barcelona1.jpg" style="position:absolute; left:50%; top:50%; margin-left:-1000px; margin-top:-256px;max-width:none;"/>
    </header>
    <div class="container" style="margin-top: -450px; position: relative">
        {% include 'searchContainer.html.twig' %}
        <div class="short-content routes-box">
            {% for key,route in routes %}
                <div class="routes">
                    <div>
                        <span style="width:75%; display: inline-block; font-size: 24px; font-family: 'Arial Black', Gadget, sans-serif;">{{ route['destination']['name'] }}</span>
                        <span style="width:25%;float:right; display: inline-block; font-size: 24px; font-family: 'Arial Black', Gadget, sans-serif; font-style: italic; text-align:right;">{{ route['minPrice'] }}</span>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}






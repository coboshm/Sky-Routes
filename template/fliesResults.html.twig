{% extends "layout.html.twig" %}


{% block content %}
<div ng-controller="fliesResultsCtrl">
    <nav class="navbar-default navbar navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <ul class="nav navbar-nav navbar-right mobile-hide bordersLaterals" style="padding: 15px 15px; display: inline-block">
                Currency ([[country.currency]])
            </ul>
            <!--<a class="navbar-brand" href="{{ path('home') }}"></a>-->
            <ul class="nav navbar-nav navbar-right" style="display: inline-block; float:right;">
                <li class="dropdown bordersLaterals">
                    <a href="#" ng-click="openModal()" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                        <span class="mobile-hide">Country</span> <i class="glyphicon glyphicon-map-marker" style="vertical-align: -1px; padding-left: 10px;"></i>
                        ([[country.name]])
                    </a>
                    <ul class="dropdown-menu mobile-hide" role="menu">
                        <li ng-repeat="mayCountry in countries"><a ng-click="changeCountry(mayCountry)">[[mayCountry.name]]</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav><!-- /navbar -->
    <header style="width: 100%; height: 500px; position: relative; overflow: hidden;">
        <img src="/assets/img/barcelona1.jpg" style="position:absolute; left:50%; top:50%; margin-left:-1000px; margin-top:-256px;max-width:none;"/>
    </header>
    <div class="container" style="margin-top: -450px; position: relative">
        <div style="" class="center-block search-box">
            <form autocomplete="off" class="tile" style="text-align: left;" method="POST" action="/index.php/searchFlies" ng-submit="submitSearchFlies()">
                <input type="hidden" name="lang" value="[[country.lang]]"/>
                <input type="hidden" name="country" value="[[country.name]]"/>
                <input type="hidden" name="currency" value="[[country.currency]]"/>
                <input type="hidden" name="departureName" value="[[cityName]]"/>
                <div class="col-sm-12">
                    <div>
                        <div class="inner-addon right-addon">
                            <i class="glyphicon glyphicon-plane"></i>
                            <input type="text" ng-model="cityFrom" name="city" placeholder="From" uib-typeahead="address as address.name for address in getLocation($viewValue) | limitTo:8" typeahead-min-length="2" typeahead-loading="loadingLocations" typeahead-no-results="noResults" class="form-control">
                        </div>
                    </div>
                </div>
                <div style="display: inline-block; width: 100%;">
                    <div style="margin-top:10px;">
                        <div class="col-sm-6">
                            <p class="input-group">
                                <input type="text" class="form-control" placeholder="Departure" name="departure" value="[[departure]]" uib-datepicker-popup="[[format]]" ng-model="departure" is-open="IsDepartureOpen" date-disabled="disabledDate(date, mode)" min-date="minDate" max-date="maxDate" show-weeks="false" datepicker-options="dateOptions" show-button-bar="false" ng-required="true" close-text="Close" alt-input-formats="altInputFormats" />
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" ng-click="departureOpen()"><i class="glyphicon glyphicon-calendar"></i></button>
                                </span>
                            </p>
                        </div>
                    </div>
                    <div style="margin-top:10px;">
                        <div class="col-sm-6">
                            <p class="input-group">
                                <input type="text" class="form-control" placeholder="Return" name="return" value="[[return]]" uib-datepicker-popup="[[format]]" ng-model="return" is-open="IsReturnOpen" date-disabled="disabledDate(date, mode)" min-date="minDate" max-date="maxDate" show-weeks="false" datepicker-options="dateOptions" show-button-bar="false" ng-required="true" close-text="Close" alt-input-formats="altInputFormats" />
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-default" ng-click="returnOpen()"><i class="glyphicon glyphicon-calendar"></i></button>
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
                <div style="display: inline-block; width: 100%; margin-top: -15px;">
                    <div style="margin-top: 10px;">
                        <div class="col-sm-6 inner-addon right-addon-extra">
                        </div>
                    </div>
                    <div style="margin-bottom: 10px; margin-top: 10px;">
                        <div class="col-sm-6">
                            <button type="submit" class="btn btn-success" style="width:100%;"><i class="glyphicon glyphicon-search"></i> &nbsp;Search </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="short-content routes-box">
            {% for route in routes %}
                <div class="routes">
                    <div>
                        <span style="display: inline-block; font-size: 24px; font-family: 'Arial Black', Gadget, sans-serif;">{{ route['destination']['name'] }}</span>
                        <span style="float:right; display: inline-block; font-size: 24px; font-family: 'Arial Black', Gadget, sans-serif; font-style: italic;">{{ route['minPrice'] }}</span>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}






<div class="search-box-wrapper">
    <div class="center-block search-box">
        <div class="" ng-controller="searchCtrl">
            <form autocomplete="off" class="tile" style="text-align: left;" method="POST" action="/{{ 'locale'|trans|lower }}/searchFlies" ng-submit="submitSearchFlies()">
                <input type="hidden" name="lang" value="[[country.lang]]"/>
                <input type="hidden" name="country" value="[[country.name]]"/>
                <input type="hidden" name="currency" value="[[country.currency]]"/>
                <input type="hidden" name="departureName" value="[[cityName]]"/>
                <input type="hidden" name="departure" id="departure"/>
                <input type="hidden" name="return" id="return"/>
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="title">{{ 'where'|trans }}</h4>
                        <div class="form-group">
                            <label>{{ 'leavingfrom'|trans }}</label>
                            <input style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%" type="text" ng-model="cityFrom" name="city" placeholder="{{ 'cityairport'|trans }}" uib-typeahead="address as address.name for address in getLocation($viewValue) | limitTo:5" typeahead-min-length="2" typeahead-loading="loadingLocations" typeahead-no-results="noResults">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h4 class="title">{{ 'when'|trans }}</h4>
                        <div class="form-group row">
                            <div class="col-xs-12">
                                <label>{{ 'departingon'|trans }}</label>
                                <div id="reportrange" class="pull-right" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%">
                                    <i class="glyphicon glyphicon-calendar fa fa-calendar"></i>&nbsp;
                                    <span></span> <b class="caret"></b>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-xs-6 pull-right">
                                <label>&nbsp;</label>
                                <button type="submit" class="full-width icon-check">{{ 'searchagain'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
